}
.calendarTab label{
  width:40rpx;
  height:20rpx;
  overflow: hidden;
}
.calendarTab label:nth-child(1){
  margin-right:10rpx;
}
.calendarTab label:last-child{
  margin-left:10rpx;
}
.calendarTab image{
  width:40rpx;
  height:20rpx;
}
.middle{
  width:100%;
}
.salaryList{
