  border-right:#ddd 1rpx solid;
}
.salaryTab .money{
  font-size: 32rpx;
  display: block;
  line-height: 32rpx;
}
.middle .flex-item .money.green{
  color: #3DBD7D;
}
.middle .flex-item .money.debit{
  color:#FF594C;
}
.middle .flex-item .money.blue{
  color:#64B5F6;
}
.salaryTab .salaryType{
  font-size: 24rpx;
  color: #353232 ;
  display: block;
  line-height: 24rpx;
  margin-top:16rpx;
}
.salaryTab image{
  width:20rpx;
  height:12rpx;
  overflow: hidden;
  position: absolute;
  left:45%;
  bottom: -20px;
  display: none;
  }
  .salaryTab .e image{
    display: block;
  }
  .salaryBox{ 
    margin-top:20rpx;
    position: relative;
  }
  .salaryBox .loading{
    width:100%;
    height:100rpx;
  }
  .salaryBox .loading image{
    width:100rpx;
    height:100rpx;
    display: block;
    margin:0 auto;
