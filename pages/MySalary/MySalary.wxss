  display: none;
}
.salaryList .flex-item{
  width: 400rpx;
  height: 200rpx;
  font-size: 26rpx;
  text-align: center;
  color: #666;
}
.salaryList .flex-item-V{
  margin: 0 auto;
  width: 400rpx;
  height: 200rpx;
}
.salaryList .title{
  font-size: 28rpx;
